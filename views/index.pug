extends includes/layout

block title
  title Pranav Rajpurkar

block description
  meta(name='description', content='I\'m Pranav Rajpurkar, a PhD student in Stanford\'s Computer Science department. Here I share some of my projects.')
  if writings
    meta(name='robots', content='noindex')

block extralinks
  link(rel='stylesheet', href='/stylesheets/index.css')

include mixins/projectList
include mixins/writingList

block content
  .outer
    .sidebar
      .cover#leftCover
        .vertical-center
          .container
            .row
              img.media-object.img-circle#me(src="/images/PranavRajpurkar.jpg")
              h1 Pranav Rajpurkar
              h3 PhD student in Computer Science <br> Stanford University
              h4 pranavsr@cs.stanford.edu
              ul.list-inline.outside-links
                li
                  a(href="https://github.com/rajpurkar")
                    i.fa.fa-github
                li
                  a(href="https://twitter.com/pranavrajpurkar")
                    i.fa.fa-twitter
                li
                  a(href="http://dblp.uni-trier.de/pers/hd/r/Rajpurkar:Pranav")
                    i.fa.fa-newspaper-o
    .contentbar
      .cover#rightCover
        .col-lg-8.col-lg-offset-1.col-md-9.col-md-offset-1.col-sm-10.col-sm-offset-1

          if projects
            h1 About
            p 
              | I am a Ph.D. student in the 
              a(href="https://stanfordmlgroup.github.io/") Stanford Machine Learning Group
              |  where I'm advised by Professor Andrew Ng and Professor Percy Liang. My research focuses on developing machine learning algorithms and applying AI solutions to high-impact problems.
              +projectList(projects)
          if writings
            +writingList(writings)
