@require 'vendor/lato'
@require 'layout/theme'
@require 'layout/errorMessage'
@require 'layout/cover'
@require 'layout/button'
@require 'layout/sidebar'

html,
body
  font-family 'Lato', Arial, sans-serif
  width 100%
  height 100%
  font-weight 400
  color #555

h3, p
  margin 0px

body
  background-color white

a
  color $theme-color

a:hover, a:active, a:focus
  text-decoration none !important
  color $theme-color-dark

ul
  margin 0px

hr
  margin 20px auto

h2
  font-size 2em
  border-bottom 1px solid #ddd
h3
  font-size 1.3em
p
  padding 10px 0px
  font-size 1.3em
  line-height 1.5em
  font-weight 400
