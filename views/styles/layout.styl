@require 'layout/theme'

html,
body
  font-family 'Roboto', Arial, sans-serif
  width 100%
  height 100%
  font-weight 400
  color #555

section
  padding 30px 0px

a
  color $theme-color

a:hover, a:active, a:focus
  text-decoration none !important
  color $theme-color-dark

ul
  margin 0px

h1, h2, h3, h4, h5
  font-family 'Roboto Slab', Arial, sans-serif

h1, h2, h3
  margin-top 15px
  margin-bottom 15px

h4, h5
  margin-top 6px
  margin-bottom 6px
