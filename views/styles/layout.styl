@require 'vendor/lato'
@require 'layout/theme'

html,
body
  font-family 'Lato', Arial, sans-serif
  width 100%
  height 100%
  font-weight 400
  color #555

section
  padding 30px 0px

a
  color $theme-color

a:hover, a:active, a:focus
  text-decoration none !important
  color $theme-color-dark

ul
  margin 0px

h1, h2, h3
  margin-top 10px
  margin-bottom 10px

h4, h5
  margin-top 2px
  margin-bottom 2px
